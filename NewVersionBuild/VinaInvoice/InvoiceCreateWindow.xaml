                            <Grid  Grid.Column="6" Margin="5 0 10 0" >
                                <TextBox x:Name="txtCustomerBankName"  
                                         Style="{StaticResource TextboxAutoComleted}"                                                               
                                         Text="{Binding InvoiceCreate.b_bank_name , UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                        </Grid>
                    </Grid>

                    <!-- Layout list product -->
                    <Grid Grid.Row="2">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled" Background="White" Margin="0 0 0 3">
                            <ListView x:Name="A" ItemsSource="{Binding ProductList, Mode=TwoWay}" 
                                      SelectedItem="{Binding ProductItemSeleced}" SelectionMode="Single"       
                                      KeyboardNavigation.TabNavigation="Continue">
                                <!--ListView Style-->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListViewItem}">
                                        <Setter Property="IsTabStop" Value="False" />
                                        <Setter Property="Height" Value="36" />

                                        <Style.Triggers>
                                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                <Setter Property="IsSelected" Value="True" />

                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <!--ListView Content-->
                                <ListView.View>
                                    <GridView >
                                        <GridViewColumn DisplayMemberBinding="{Binding Stt}"  Header="Stt" Width="50" />
                     
                                        <GridViewColumn  Header="" Width="50" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
            
                                        <GridViewColumn  Header="Mã hàng hóa"  Width="150"  >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="100" >
                                                        <TextBox x:Name="txtProductCode"  Style="{StaticResource TextboxListView}"  Margin="5 0 0 0"  Padding="5 0 0 0"
                                                                  Text="{Binding ItemCode,  UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                                                        <toolkit:AutoCompleteBox  IsTextCompletionEnabled="False" FilterMode="Contains"
                                                            ItemsSource="{Binding Path= DataProductList, Source={StaticResource InvoiceCreateVM}}"                                                            
                                                            SelectedItem="{Binding ProductSellected ,Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}"
                                                            ValueMemberPath="item_code" >
                                                            <toolkit:AutoCompleteBox.Style>
                                                                <Style TargetType="toolkit:AutoCompleteBox">
                                                                    <Setter Property="Text" Value="{Binding ItemCode}" />
                                                                    <Setter Property="Text" Value="{Binding ElementName=txtProductCode, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                    <Setter Property="Padding" Value="5 0 0 0"/>
                                                                    <Setter Property="Margin" Value="5 0 0 0"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                </Style>
                                                            </toolkit:AutoCompleteBox.Style>
                                                            <toolkit:AutoCompleteBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Label Content="{Binding item_code}"  Width="200" Height="25"/>
                                                                </DataTemplate>
                                                            </toolkit:AutoCompleteBox.ItemTemplate>
                                                        </toolkit:AutoCompleteBox>


                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Width="250"  Header="Tên hàng hóa, dịch vụ" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  HorizontalAlignment="Stretch" MinWidth="200" >
                                                        <TextBox x:Name="txtProductName"  Style="{StaticResource TextboxListView}"  Margin="5 0 0 0"  Padding="5 0 0 0"
                                                                 Text="{Binding Name , UpdateSourceTrigger=PropertyChanged}" />

                                                        <toolkit:AutoCompleteBox 
                                                            ItemsSource="{Binding Path= DataProductList, Source={StaticResource InvoiceCreateVM}}"                                                            
                                                            SelectedItem="{Binding ProductSellected ,Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}"
                                                            ValueMemberPath="item_name" 
                                                            IsTextCompletionEnabled="False" FilterMode="Contains">
                                                            <toolkit:AutoCompleteBox.Style>
                                                                <Style TargetType="toolkit:AutoCompleteBox">
                                                                    <Setter Property="Text" Value="{Binding ElementName=txtProductName, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                                    <Setter Property="Padding" Value="5 0 0 0"/>
                                                                    <Setter Property="Margin" Value="5 0 0 0"/>
                                                                    <Setter Property="Background" Value="White"/>
                                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Foreground" Value="Black"/>
                                                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                                                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                                                                </Style>
                                                            </toolkit:AutoCompleteBox.Style>
                                                            
                                                            <toolkit:AutoCompleteBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Label Content="{Binding item_name}"  Width="200" Height="25"/>
                                                                </DataTemplate>
                                                            </toolkit:AutoCompleteBox.ItemTemplate>
                                                        </toolkit:AutoCompleteBox>

                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Width="120"  Header="Đơn vị tính" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="80" >
                                                      
                                                        <TextBox x:Name="txtProductUnitName"  Style="{StaticResource TextboxListView}"  Margin="5 0 0 0"  Padding="5 0 0 0"                                                                
                                                                 Text="{Binding UnitName , UpdateSourceTrigger=PropertyChanged}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Header="Số lượng" Width="100" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="100" >
                                                        <TextBox  Style="{StaticResource TextboxListView}"                                                                   
                                                                  Text="{Binding Quantity, Mode=TwoWay,Converter={StaticResource doubleConverterQuantity}}"  />
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Header="Đơn giá" Width="150" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="150" >
                                                        <TextBox x:Name="txtProductUnitPrice"  Style="{StaticResource TextboxListView}"  Margin="5 0 0 0"  Padding="5 0 0 0"
                                                                  Text="{Binding UnitPrice ,Mode=TwoWay, Converter={StaticResource doubleConverter}}"
                                                                  IsReadOnly="{Binding IsReverseCal, Mode=TwoWay, Converter={StaticResource IsEnableConverter},UpdateSourceTrigger=PropertyChanged}"/>

                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Header="Thành tiền" Width="150">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="150" >
                                                        <TextBox  Style="{StaticResource TextboxListView}"  IsReadOnly="{Binding TotalAmountCheck}"
                                                                  Text="{Binding SubTotal,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                                                                    Converter={StaticResource doubleConverter}}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Header="%VAT" Width="150" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="150" >
                                                        <ComboBox Grid.Column="1" Height="22" Margin="5 0 10 0" Foreground="Black" BorderBrush="Transparent" BorderThickness="0"
                                                                  ItemsSource="{Binding Path= TaxCodeList, Source={StaticResource InvoiceCreateVM}}"
                                                                  SelectedItem="{Binding VatPercentage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TaxConverter} }"
                                                                  IsEnabled="{Binding IsTaxEnable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ComboBoxConverter}}"
                                                                  SelectedIndex="{Binding IndexTax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ComboBoxIndexConverter}}"

                                                                  />

                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn  Header="Tiền thuế" Width="150">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="150" >
                                                        <TextBox  Style="{StaticResource TextboxListView}" IsReadOnly="True"
                                                                  Text="{Binding  VatAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                                                                    Converter={StaticResource doubleConverter}}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Tổng tiền" Width="150">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid  Width="150" >
                                                        <TextBox  Style="{StaticResource TextboxListView}" 
                                                                  Text="{Binding  TotalAmount, Mode=TwoWay,  Converter={StaticResource doubleConverter}}"
                                                                  IsReadOnly="{Binding IsReverseCal, Mode=TwoWay, Converter={StaticResource IsEnableNagativeConverter},UpdateSourceTrigger=PropertyChanged}"/>
                                                        
                                                    </Grid>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="440"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="0 0 20 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="100"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>

                                <RowDefinition Height="80"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>

                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="10 5 0 5" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button  Grid.Column="0" Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="MaterialDesignFloatingActionButton" Height="30" Width="30"
                                         Command="{Binding RefreshProductCommand}">
                                    <materialDesign:PackIcon Kind="Refresh" />
                                </Button>

                                <Button  Grid.Column="1" Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="MaterialDesignFloatingActionButton" Height="30" Width="30"
                                         Command="{Binding RemoveProductCommand}">
                                    <materialDesign:PackIcon Kind="Minus" />
                                </Button>

                                <Button  Grid.Column="2" Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="MaterialDesignFloatingActionButton" Height="30" Width="30"
                                         Command="{Binding AddProductCommand}">
                                    <materialDesign:PackIcon Kind="Add" />
                                </Button>

                                <CheckBox Grid.Column="5" Margin="0 6 0 6" 
                                          VerticalAlignment="Center" HorizontalAlignment="Right" 
                                          IsChecked="{Binding IsReverseCaculator}">
                                    Tính ngược
                                </CheckBox>
                                                        

                            </Grid>

                            <Grid Grid.Row="1" Margin="0 15 0 0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="70"/>

                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Đơn vị tiền tệ:</TextBlock>


                                <ComboBox Grid.Column="1" ItemsSource="{Binding Path= MoneyUnits}" SelectedItem="{Binding Path=InvoiceCreate.currency_code}"
                                          Height="28" Margin="5 0 0 0" Foreground="Black" SelectedIndex="0"  >
                                    <!--<ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=Name}" HorizontalAlignment="Left" Padding="10 0 0 0"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>-->
                                </ComboBox>
                                <TextBlock Grid.Column="2" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Tỷ giá:</TextBlock>
                                <TextBox  Grid.Column="3"
                                    Text="{Binding InvoiceCreate.exchange_rate}"
                                    Height="28" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" VerticalAlignment="Top">
                                </TextBox>

                            </Grid>

                            <!--<Grid Grid.Row="2" Margin="0 15 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" >CK theo đơn hàng:</TextBlock>
                                <TextBox 
                                    Text="{Binding invoiceSumExtend.DiscountTotal,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,  Converter={StaticResource doubleConverter}}"
                                    Grid.Column="1" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right"  >

                                </TextBox>

                                <TextBox 
                                    Text="{Binding invoiceSumExtend.DiscountPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource PerCentFortmatConverterDiscount}}"
                                    Grid.Column="2" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" Grid.ColumnSpan="2">
                                </TextBox>


                                

                            </Grid>-->


                            <TextBlock Grid.Row="3" 
                                       Margin="15 10 0 0" FontSize="13" VerticalAlignment="Bottom">Số tiền in bằng chữ:</TextBlock>

                            <TextBox Grid.Row="4"
                                    Text="{Binding InvoiceCreate.in_word}"
                                    Background="White" BorderBrush="Black" BorderThickness="1" Margin="15 10 0 10" Padding="5 0 0 0" Foreground="Red" VerticalContentAlignment="Top" TextWrapping="Wrap"></TextBox>




                        </Grid>

                        <Grid Grid.Column="1" Margin="0 0 20 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>


                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Thuế suất:</TextBlock>
                                <ComboBox Grid.Column="1"  Height="28" Margin="5 0 0 0" Foreground="Black" 
                                          ItemsSource="{Binding Path= TaxCodeList}" 
                                          SelectedItem="{Binding Path=InvoiceCreate.vat_rate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TaxConverter}}"
                                          IsEnabled="{Binding IsMoreTax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IsEnableNagativeConverter}}"
                                          SelectedIndex="{Binding IndexTotalComboBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ComboBoxIndexConverter}}"
>

                                </ComboBox>


                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Phí dịch vụ:</TextBlock>
                                <!--<TextBox 
                                    Text="{Binding InvoiceCreate.total_service_charge}"
                                    Grid.Column="2" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" >
                                    
                                </TextBox>-->
                                <TextBox 
                                    Text="{Binding invoiceSumExtend.ServiceChargePercent,Mode=TwoWay, Converter={StaticResource PerCentFortmatConverterServiceCharge}}"
                                    Grid.Column="1" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" >
                                </TextBox>


                                <TextBox 
                                    Text="{Binding invoiceSumExtend.ServiceChargeTotal,Mode=TwoWay,  Converter={StaticResource doubleConverter}}"
                                    Grid.Column="2" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" >

                                </TextBox>

                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">CK theo đơn hàng:</TextBlock>

                                <TextBox 
                                    Text="{Binding invoiceSumExtend.DiscountPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource PerCentFortmatConverterDiscount}}"
                                    Grid.Column="1" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" >
                                </TextBox>


                                <TextBox 
                                    Text="{Binding invoiceSumExtend.DiscountTotal,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,  Converter={StaticResource doubleConverter}}"
                                    Grid.Column="2" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right" >

                                </TextBox>

                            </Grid>


