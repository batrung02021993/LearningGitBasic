                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Thuế suất:</TextBlock>
                                <ComboBox Grid.Column="1" ItemsSource="{Binding Path= TaxCodeList}" SelectedItem="{Binding Path=staxcode}" SelectedIndex="0"
                                          Height="28" Margin="5 0 0 0" Foreground="Black">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=name}" HorizontalAlignment="Left" Padding="10 0 0 0"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>-->

                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Tổng tiền hàng:</TextBlock>
                                <TextBox 

                                    Text="{Binding invoiceSum.SubTotal,
                                           Converter={StaticResource doubleConverter1}}" IsReadOnly="True"
                                    Grid.Column="2" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right"></TextBox>

                            </Grid>

                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center">Thuế GTGT:</TextBlock>
                                <TextBox 
                                    Text="{Binding invoiceSum.VatTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                                           Converter={StaticResource doubleConverter1}}" IsReadOnly="True"
                                    Grid.Column="2" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5 0 0 0" HorizontalContentAlignment="Right"></TextBox>

                            </Grid>

                            <Grid Grid.Row="5" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="69*"/>
                                    <ColumnDefinition Width="11*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,13,0,12">Tổng tiền:</TextBlock>
                                <TextBox x:Name="TbxTotalAmount" 
                                    Text="{Binding invoiceSum.TotalAmount, Mode=TwoWay,
                                           Converter={StaticResource doubleConverter1}}"
                                    Grid.Column="1" Height="30" BorderBrush="Black" BorderThickness="1"  Background="White" Margin="5,6,0,6" HorizontalContentAlignment="Right" Grid.ColumnSpan="2" IsReadOnly="True"></TextBox>

                            </Grid>


                        </Grid>

                        <Grid Grid.Column="2" Margin="0 0 20 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>

                            </Grid.RowDefinitions>
                            <Button 
                                Command="{Binding SignCommand}"
                                 CommandParameter="{Binding ElementName=invoiceCreateWindow}"
                                Grid.Row="0" Height="38" Margin="5 10 0 0" Background="DarkBlue" Foreground="White" >Ký, phát hành HĐ</Button>
                            <Button
                                Command="{Binding SaveCommand}"
                                Grid.Row="1" Height="38" Margin="5 10 0 0" Background="Transparent" Foreground="Blue">Lưu(Alt+L)</Button>
                            <Button 
                                 x:Name="KeepButton" Command="{Binding KeepCommand}" 
                                 CommandParameter="{Binding ElementName=invoiceCreateWindow}"
                                 Grid.Row="2" Height="38" Margin="5 10 0 0" Background="Transparent" Foreground="Blue" >Giữ hóa đơn</Button>

                            <Button Grid.Row="3" Height="38" Margin="5 10 0 0" Background="Transparent" Foreground="Blue" 
                                    Command="{Binding ViewCommand}">Xem hóa đơn</Button>
                            <Button 
                                 Command="{Binding SendCommand}"
                                Grid.Row="4" Height="38" Margin="5 10 0 0" Background="Transparent" Foreground="Blue" >Gửi hóa đơn nháp</Button>

                            <Button 
                                Command="{Binding CloseCommand}"
                                  CommandParameter="{Binding ElementName=invoiceCreateWindow}"
                                Grid.Row="5" Height="38" Margin="5 15 0 0" Background="DarkGray" Foreground="Black" >Đóng</Button>


                        </Grid>


                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Layout Control bar -->
        <Grid Grid.Row="5" VerticalAlignment="Stretch" Background="DarkGray">
            <TextBlock 
                VerticalAlignment="Center"
                Margin="10 0 0 0"
                Text="{Binding Path= StatusBarString}"/>
        </Grid>
    </Grid>
</Window>