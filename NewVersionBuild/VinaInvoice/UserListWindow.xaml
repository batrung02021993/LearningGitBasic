                            <Border Grid.Row="0"
                                BorderThickness="1"
                                BorderBrush="DarkGray"
                                ClipToBounds="True">
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="49"/>
                                        <ColumnDefinition Width="151"/>
                                    </Grid.ColumnDefinitions>
