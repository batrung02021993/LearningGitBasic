                            </Border>



                        </Grid>

                    </materialDesign:Card>-->

                    <!--Layout Page/Sort-->
                    <Border    Grid.Column="2"
                                BorderThickness="1" 
                                BorderBrush="DarkGray"
                                ClipToBounds="True"
                                Margin="10 0 0 0">
                        <Grid Margin="15 5 5 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <!--Row 0-->
                            <Grid  Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="98"/>
                                    <ColumnDefinition Width="23"/>
                                </Grid.ColumnDefinitions>
                                <!--Page-->
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,15">Trang:</TextBlock>
                                <TextBox   Grid.Column="1" Background="White" Margin="0 10 0 10" Padding="2 0 0 0"
                                           BorderBrush="DarkGray" BorderThickness="1">1</TextBox>

                                <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="10,15">Số dòng:</TextBlock>
                                <TextBox   Grid.Column="3" Background="White" Margin="0 10 0 10" Padding="2 0 0 0"
                                           BorderBrush="DarkGray" BorderThickness="1">50</TextBox>

                                <TextBlock Grid.Column="4" VerticalAlignment="Center" Margin="10,15">Sắp xếp:</TextBlock>

                                <ComboBox  Grid.Column="5" Height="30" materialDesign:HintAssist.Hint="Id" Foreground="Black" 
                                    Background="White" Padding="5 0 0 0 " VerticalContentAlignment="Center" Margin="0,8" >

                                    <ComboBoxItem>
                                        Id
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        Email
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        Nhóm
                                    </ComboBoxItem>
                                </ComboBox>

                                <RadioButton  Grid.Column="6" Style="{StaticResource MaterialDesignRadioButton}" Tag="True" VerticalAlignment="Center" Margin="10,14,0,14">
                                    <RadioButton.IsChecked>
                                        <Binding Path="Tag"
                                             RelativeSource="{RelativeSource Self}">
                                            <Binding.ValidationRules>
                                                <!--todo Biding-->
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </RadioButton.IsChecked>
                                    Giảm dần
                                </RadioButton>

                                <RadioButton  Grid.Column="7" Style="{StaticResource MaterialDesignRadioButton}" Tag="True" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="0,14">
                                    <RadioButton.IsChecked>
                                        <Binding Path="Tag"
                                             RelativeSource="{RelativeSource Self}">
                                            <Binding.ValidationRules>
                                                <!--todo Biding-->
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </RadioButton.IsChecked>
                                    Tăng dần
                                </RadioButton>
                            </Grid>
                            <!--Row 1-->
                            <Grid Grid.Row="1" Margin="0 5 0 5"  ClipToBounds="True">
                                <DockPanel >
                                  

                                    <Grid DockPanel.Dock="Right" Width="250" Margin="0 0 20 0 " HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120*"/>
                                            <ColumnDefinition Width="120*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Style="{StaticResource MaterialDesignRaisedLightButton}"  Width="120"  Margin="0 0 0 5" 
                                                ToolTip="Resource name: MaterialDesignRaisedLightButton" HorizontalAlignment="Left">
                                            Trang trước
                                        </Button>
                                        <Button  Grid.Column="1" Style="{StaticResource MaterialDesignRaisedLightButton}"  Width="120"  Margin="0 0 0 5" 
                                        ToolTip="Resource name: MaterialDesignRaisedLightButton" HorizontalAlignment="Right">
                                            Trang tiếp
                                        </Button>
                                    </Grid>

                                </DockPanel>
                            </Grid>

                        </Grid>

                    </Border>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>

        <!-- Layout Control bar -->
        <Grid Grid.Row="4" VerticalAlignment="Stretch" Background="DarkGray">
            <TextBlock 
                VerticalAlignment="Center"
                Margin="10 0 0 0"
                Text="{Binding Path= StatusBarString}"/>
        </Grid>

    </Grid>
</Window>
